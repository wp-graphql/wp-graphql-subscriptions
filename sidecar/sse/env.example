# WPGraphQL Configuration
WPGRAPHQL_ENDPOINT=http://localhost/graphql
WPGRAPHQL_TIMEOUT=10000
WPGRAPHQL_RETRIES=3

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=wpgraphql:subscriptions:

# Server Configuration
PORT=4000
CORS_ENABLED=true
SUBSCRIPTION_TIMEOUT=30000
SSE_KEEP_ALIVE=30000

# Schema Configuration
SCHEMA_CACHE_TTL=300
SCHEMA_INTROSPECTION_INTERVAL=300000

# Authentication
JWT_SECRET=your-jwt-secret-here
VALIDATE_TOKENS=true

# Logging
LOG_LEVEL=info
