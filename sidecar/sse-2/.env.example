# WPGraphQL Configuration
WPGRAPHQL_ENDPOINT=http://localhost/graphql
WPGRAPHQL_INTROSPECTION_ENDPOINT=http://localhost/graphql

# Server Configuration  
PORT=4000
HOST=localhost
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Security - CHANGE THIS IN PRODUCTION!
SUBSCRIPTION_SECRET=your-secret-key-here-change-in-production-32-chars-minimum

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# SSE Configuration
SSE_HEARTBEAT_INTERVAL=30000
SSE_CONNECTION_TIMEOUT=300000
